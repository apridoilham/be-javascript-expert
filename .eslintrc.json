{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["src/Domains/**/*Repository.js", "src/Applications/security/*.js"],
      "rules": {
        "no-unused-vars": "off",
        "class-methods-use-this": "off"
      }
    },
    {
      "files": ["src/Domains/**/entities/*.js"],
      "rules": {
        "class-methods-use-this": "off"
      }
    },
    {
      "files": ["src/Applications/use_case/*UseCase.js"],
      "rules": {
        "class-methods-use-this": "off"
      }
    }
  ]
}
